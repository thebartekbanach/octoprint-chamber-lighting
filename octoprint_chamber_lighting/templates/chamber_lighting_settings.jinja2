<form class="form-horizontal">
    <h2>Behavior</h2>
    <div class="control-group">
        <label class="control-label">Auto light hold time</label>
        <div class="controls">
            <input type="number" class="input-block-level" data-bind="value: settings.plugins.chamber_lighting.auto_light_hold_time" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Mode when printing</label>
        <div class="controls">
            <select class="input-block-level" data-bind="value: settings.plugins.chamber_lighting.mode_when_printing">
                <option value="0">Off</option>
                <option value="1">On</option>
            </select>
        </div>
    </div>

    <h2>Pinout <small>as BCM</small></h2>
    <img alt="Source: https://pinout.xyz/resources/raspberry-pi-pinout.png" style="max-width: 100%" src="https://pinout.xyz/resources/raspberry-pi-pinout.png" />
    <div class="control-group">
        <label class="control-label">Door open detection pin</label>
        <div class="controls">
            <input type="number" class="input-block-level" data-bind="value: settings.plugins.chamber_lighting.door_open_detection_pin" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Lighting relay switch pin</label>
        <div class="controls">
            <input type="number" class="input-block-level" data-bind="value: settings.plugins.chamber_lighting.lighting_relay_switch_pin" />
        </div>
    </div>

    <h2>Pin modes</h2>
    <div class="control-group">
        <label class="control-label">Door open detection state</label>
        <div class="controls">
            <select class="input-block-level" data-bind="value: settings.plugins.chamber_lighting.door_open_detection_state">
                <option value="0">Low</option>
                <option value="1">High</option>
            </select>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Lighting relay turned on state</label>
        <div class="controls">
            <select class="input-block-level" data-bind="value: settings.plugins.chamber_lighting.lighting_relay_switch_on_state">
                <option value="0">Low</option>
                <option value="1">High</option>
            </select>
        </div>
    </div>
</form>
