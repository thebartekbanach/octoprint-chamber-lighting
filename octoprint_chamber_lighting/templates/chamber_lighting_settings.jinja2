<form class="form-horizontal">
    <h2>Behavior</h2>
    <div class="control-group">
        <label class="control-label">Auto light hold time</label>
        <div class="controls">
            <input type="number" data-bind="value: settings.plugins.chamber_lighting.auto_light_hold_time" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Turn on automatically when</label>
        <div class="controls">
            <select data-bind="value: settings.plugins.chamber_lighting.auto_turn_on_when">
                <option value="0">Never turn on automatically</option>
                <option value="1">Printing</option>
                <option value="2">Connected</option>
            </select>
        </div>
    </div>

    <h2>Pinout <small>as BCM</small></h2>
    <img alt="Source: https://pinout.xyz/resources/raspberry-pi-pinout.png" style="max-width: 100%; marign-bottom: 10px;" src="https://pinout.xyz/resources/raspberry-pi-pinout.png" />
    <div class="control-group">
        <label class="control-label">Door open detection pin</label>
        <div class="controls">
            <input type="number" data-bind="value: settings.plugins.chamber_lighting.door_open_detection_pin" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Lighting relay switch pin</label>
        <div class="controls">
            <input type="number" data-bind="value: settings.plugins.chamber_lighting.lighting_relay_switch_pin" />
        </div>
    </div>

    <h2>Pin modes</h2>
    <div class="control-group">
        <label class="control-label">Door open detection state</label>
        <div class="controls">
            <select data-bind="value: settings.plugins.chamber_lighting.door_open_detection_state">
                <option value="0">Low</option>
                <option value="1">High</option>
            </select>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Lighting relay turned on state</label>
        <div class="controls">
            <select data-bind="value: settings.plugins.chamber_lighting.lighting_relay_switch_on_state">
                <option value="0">Low</option>
                <option value="1">High</option>
            </select>
        </div>
    </div>
</form>
